#include <iostream>
#include "GTree.h"

using namespace std;
using namespace WLib;

int main()
{
    GTree<int> tree;
    
    // 创建节点
    TreeNode<int>* root = tree.insert(1, nullptr);  // 根节点
    TreeNode<int>* child1 = tree.insert(2, root);   // 根的子节点
    TreeNode<int>* child2 = tree.insert(3, root);   // 根的另一个子节点
    TreeNode<int>* child3 = tree.insert(4, child1); // 2的子节点
    
    // 测试 find(const T& value) 函数
    GTreeNode<int>* found = tree.find(3);
    if(found != NULL)
    {
        cout << "Found node with value: " << found->value << endl;
    }
    else
    {
        cout << "Node with value 3 not found" << endl;
    }
    
    // 测试 find(TreeNode<T>* node) 函数
    GTreeNode<int>* foundNode = tree.find(child2);
    if(foundNode != NULL)
    {
        cout << "Found node by reference with value: " << foundNode->value << endl;
    }
    else
    {
        cout << "Node not found by reference" << endl;
    }
    
    return 0;
}